<dl class="portlet portletCampaigns"
    i18n:domain="osha"
    tal:define="portlet_icon view/icon;
                portlet_icon_ew2007 view/icon_ew2007">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              i18n:translate="box_campaigns">
            Campaigns
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        
        <h4 class="campaignHeader">European Campaign 2007</h4>
        <div class="campaignContent">
            <span class="image-right"
                  tal:condition="portlet_icon_ew2007">
                <img tal:replace="structure portlet_icon_ew2007" />
            </span>
            <a rel="nofollow" href="http://ew2007.osha.europa.eu/?sourceid=campaignsbanner" 
               i18n:translate="portlet_campaign_ew2007_text">
               Lighten the load!
            </a>
        </div>
    </dd>
    <dd class="portletFooter">
        <a rel="nofollow" href="/campaigns?sourceid=campaignsbanner" i18n:domain="plone" i18n:translate="box_morelink">More...</a>
    </dd>

</dl>
