<dl class="portlet portletFreeNewsletter"
    i18n:domain="osha"
    tal:define="portlet_icon view/icon">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              i18n:translate="box_freenewsletter">
            Free Newsletter
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        <span class="image-right"
              tal:condition="portlet_icon">
            <img tal:replace="structure portlet_icon" />
        </span>
        <a href="http://osha.europa.eu/oshmail/?sourceid=oshmailbanner"> Monthly review of strategic news
            <br/>
            - Subscribe -
        </a>
    </dd>

    <dd class="portletFooter">
        <strong id="numoshmailsubscribers">1711</strong> 
        <span i18n:translate="text_subscribers"
              tal:omit-tag="">subscribers</span>
    </dd>

</dl>
