<dl class="portlet portletAlertService"
    i18n:domain="osha"
    tal:define="portlet_icon view/icon">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              i18n:translate="Alert Service">
            Alert Service
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        <span class="image-right"
              tal:condition="portlet_icon">
            <img tal:replace="structure portlet_icon" />
        </span>
        <a rel="nofollow" href="http://osha.europa.eu/subscribe_form?sourceid=alertbanner">
        <span tal:omit-tag="" i18n:translate="portlet_alertservice_text">Updates on topics of your choice</span>
        </a>
    </dd>

    <dd class="portletFooter">
        <strong id="numalertsubscribers" tal:content="view/num_subscribers">1340</strong> 
        <span i18n:translate="box_oshmail_subscribers"
              tal:omit-tag="">subscribers</span>
    </dd>

</dl>
