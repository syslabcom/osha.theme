<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="osha">

<body>
    <div metal:fill-slot="main">
			
    <script src="http://osha.europa.eu/++resource++vPIP/vpip.js" type="text/javascript"></script>
	<style type="text/css" media="all">@import "http://osha.europa.eu/++resource++vPIP/vPIPBox.css";</style>
    <script src="http://osha.europa.eu/++resource++vPIP/jquery.js" type="text/javascript"></script>

    <div tal:replace="structure provider:plone.abovecontenttitle" />
    <h1 tal:content="here/title"></h1>
    <div tal:replace="structure provider:plone.belowcontenttitle" />
    <p tal:content="structure here/Description"></p>  
    <div tal:replace="structure provider:plone.abovecontentbody" />

    <tal:block define="film python:view.getFilm(request.get('filmid'))">

        <h2 tal:content="film/title" i18n:translate=""> </h2>
        <!--span i18n:translate="label_napo_click_to_see_film">Click the image to see the film...</span><br-->
        <span i18n:translate="label_napo_download_film_as">Download this film as</span> 
		<a tal:attributes="href film/durlavi"><span i18n:translate="label_avi">AVI</span></a> <span i18n:translate="label_or">or</span>
		 <a tal:attributes="href film/durlwmv"><span i18n:translate="label_wmv">WMV</span></a>

        <tal:block repeat="episode film/episodes">
           <div class="hvlog" 
                style="padding: 10px 0 10px 0; border-bottom: 1px dashed gray;">
                  
             <div style="margin:10px; float: left;">
               
                <a tal:attributes="href episode/durlwmv; title episode/title" 
                   rel="enclosure"           
                   class="hVlogTarget" 
                   type="video/x-ms-wmv"
                   onclick="vPIPPlay(this, 'width=320, height=260, autostart=true, controller=true, name=NapoMovie, revert=true'); return false;">
                   <img tal:attributes="src episode/image_url" />
                </a>
             </div>
             
             <div style="float:left">
                <h3 tal:content="episode/title" i18n:translate="" />
                <span i18n:translate="label_napo_click_to_see_film">Click the image to see the film...</span><br>
                <span i18n:translate="label_napo_download_episode_as">Download this episode as</span> 
				<a tal:attributes="href episode/durlavi"><span i18n:translate="label_avi">AVI</span></a> 
                 <span i18n:translate="label_or">or</span> 
				<a tal:attributes="href episode/durlwmv"><span i18n:translate="label_wmv">WMV</span></a>
             </div>
             
             <div class="visualClear"></div>
           </div>

        </tal:block> 
    </tal:block> 

    </div>
</body>
</html>

