<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    lang="en"
    metal:use-macro="here/main_template/macros/master"
    i18n:domain="osha-napo">

    <body>
        <div metal:fill-slot="main" id="linguaToolForms">
        <tal:block define="indexobj nocall:here/index_html|nothing;
			height request/height|string:480;
			width request/width|string:640">
			<script src="http://osha.europa.eu/++resource++vPIP/vpip.js" type="text/javascript"></script>
			<style type="text/css" media="all">@import "http://osha.europa.eu/++resource++vPIP/vPIPBox.css";</style>
       <script src="http://osha.europa.eu/++resource++vPIP/jquery.js" type="text/javascript"></script>

       <div tal:replace="structure provider:plone.abovecontenttitle" />


       <div tal:replace="structure provider:plone.belowcontenttitle" />


       <div tal:replace="structure provider:plone.abovecontentbody" />


   <h2 tal:content="here/title"></h2>
   <p tal:content="here/Description"></p>  
   <tal:block define="films python:view.getFilms()" repeat="filmdata films">

     <div tal:define="filmid python: filmdata[0]; film python: filmdata[1]" 
          class="hvlog" 
          style="padding: 10px 0 10px 0; border-bottom: 1px dashed gray;">
     <div style="margin:10px; float: left;">
	  <img tal:attributes="src film/image_url"/>
     </div>
     <div style="float:left">
       <a tal:attributes="href string:napoepisode?filmid=${filmid}">
      <h3 tal:content="film/title" i18n:translate="" />
       </a>
     </div>
     <div class="visualClear"></div>
       <p i18n:translate="" tal:content="structure film/description" />
       <a class="descriptionLink" tal:attributes="href string:napoepisode?filmid=${filmid}">
           <p>View episodes</p> 
       </a>
   </div>

 </tal:block>
 </tal:block>                           
        </div>
    </body>
</html>

