<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="osha-subsites">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
           tal:define="kssClassesView context/@@kss_field_decorator_view;
                       getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                       templateId template/getId;
                       text here/getText;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"> 
            <metal:field use-macro="python:here.widget('title', mode='view')">
            Title
            </metal:field>
        </h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription">
            <metal:field use-macro="python:here.widget('description', mode='view')">
            Description
            </metal:field>
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <p tal:condition="python: not text and is_editable"
           i18n:domain="plone"
           i18n:translate="no_body_text"
           class="discreet">
            This item does not have any body text, click the edit tab to change it.
        </p>

        <metal:field use-macro="python:here.widget('text', mode='view')">
            Body text
        </metal:field>

        <div metal:use-macro="here/document_relateditems/macros/relatedItems">
            show related items if they exist
        </div>

        <table class="listing"
               i18n:attributes="summary heading_agencys_resources"
               style="width:100%">
            <thead>
            <tr>
                <th colspan="2"
                    i18n:translate="heading_agencys_resources">Agency's resources</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td style="width:50%">
                    <a href="/en/publications"
                       tal:attributes="href
                           python:view.getLocalizedPath('publications')"
                       i18n:translate="label_publications">Publications</a>
                </td>
                <td>
                    <a href="/en/riskobservatory"
                       i18n:translate="risk_observatory">Risk Observatory</a>
                </td>
            </tr>
            <tr>
                <td style="width:50%">
                    <a href="/en/good_practice/index_ralink"
                       tal:attributes="href
                           python:view.getLocalizedPath('good_practice/index_ralink')"
                       i18n:translate="label_risk_assessment_tools">Risk Assessment Tools</a>
                </td>
                <td>
                    <a href="/en/good_practice/index_casestudy"
                       tal:attributes="href
                           python:view.getLocalizedPath('good_practice/index_casestudy')"
                       i18n:translate="label_case_studies">Case Studies</a>
                </td>
            </tr>
            <tr>
                <td style="width:50%">
                    <a href="/en/good_practice/index_oshlink aggroviewer"
                       tal:attributes="href
                           python:view.getLocalizedPath('good_practice/index_oshlink')"
                       i18n:translate="label_useful_links">Useful Links</a>
                </td>
                <td>
                    <a href="/en/good_practice/index_provider"
                       tal:attributes="href
                           python:view.getLocalizedPath('/en/good_practice/index_provider')"
                       i18n:translate="label_providers">Providers</a>
                </td>
            </tr>
            </tbody>
        </table>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>

