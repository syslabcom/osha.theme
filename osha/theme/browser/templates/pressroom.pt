<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
lang="en"
metal:use-macro="here/main_template/macros/master"
i18n:domain="plone">

    <body>

      <div metal:fill-slot="main" id="PressRoom">

        <h1 class="header" i18n:translate="osha_nav_title_press_room">Press Room</h1>
        <div id="coloredBoxes">
        <a href="press-releases/">
            <div class="labels" id="box-press-releases">
                <h1 class="label" i18n:translate="press-releases">PRESS RELEASES</h1>
            </div>
        </a>
                
        <a href="../campaigns">
            <div class="labels" id="box-campaigns">
                <h1 class="label" i18n:translate="osha_nav_title_campaings">CAMPAIGNS</h1>
            </div>
        </a>

        <a href="photos">
            <div class="labels" id="box-photos-logos">
                <h1 class="label" i18n:translate="photos-logos">PHOTOS & LOGOS</h1>
            </div>
        </a>

        <div class="visualClear"></div>
        <div class="lowerButtons">
        <!--a href="articles"-->
            <div class="labels" id="box-useful-articles">
                <!--h1 class="label" i18n:translate="useful-articles">USEFUL ARTICLES</h1-->
            </div>
        <!--/a-->

        <a href="../about">
            <div class="labels" id="box-about-us">
                <h1 class="label" i18n:translate="osha_nav_title_about_us">ABOUT US</h1>
            </div>
        </a>

        <a href="../publications">
            <div class="labels" id="box-publications">
                <h1 class="label" i18n:translate="osha_nav_title_publications">PUBLICATIONS</h1>
            </div>
        </a>
        </div>
	</div>
        <div id="EuMediaCoverage">
            <h1 class="boxTitle" i18n:translate="osha_label_eu_media_coverage">EU media coverage</h1>
        </div>
        <div id="boxBody">
          <tal:block repeat="row view/getFeed"> 
            <h3><a tal:attributes="href row/link" tal:content="row/title">Hallo</a></h3>
            <p>
                <span tal:condition="python:row.get('date') or nothing" tal:omit-tag=""><i tal:content="python: here.toLocalizedTime(row['date'])"/></span> 
                <span tal:replace="row/description">Welt</span>
            </p>
          </tal:block>
            <div id="more-syndicated-news">
                <a href="sinList?synmap=meltwater" i18n:translate="box_more" i18n:domain="plone">More...</a>
            </div>
        </div>

        <div id="addresses">
	<table class="Tabelle">
	<tr>
	<td>
            <div i18n:translate="osha_label_international_press" id="firstAdress">
                <strong>International press:</strong><br>
                Press Office, <br>
                European Agency for Safety and Health at Work, <br>
                Bilbao <br>
                Tel: +34 94 479 35 52<br>
                <a href="mailto:news@osha.europa.eu"><img src="news.gif" alt="international press contact"></a>
            </div>
	</td>
	<td>
            <div i18n:translate="osha_label_spanish_press">
                <strong>Bilbao and Spanish press:</strong><br>
                Press Office, <br>
                European Agency for Safety and Health at Work, <br>
                Bilbao <br>
                Tel: +34 94 479 57 46<br>
                <a href="mailto:noticias@osha.europa.eu"><img src="noticias.gif" alt=""></a><br>
            </div>
	</td>
	<td>
            <div i18n:translate="osha_label_brussels_liaison_office" id="lastAdress">
                <strong>Brussels Liaison Office:</strong><br>
                European Agency for Safety and Health at Work, <br>
                Square de Mee√ªs 38/40, <br>
                1000 Brussels, Belgium <br>
                Tel: +32 2 401 68 59<br>
                <a href="mailto:obrien@osha.europa.eu"><img src="obrien.gif" alt="brussels liaison officer"></a>
            </div>    
	    </td>
	</tr></table>
        </div>
      </div>
    </body>
</html>

