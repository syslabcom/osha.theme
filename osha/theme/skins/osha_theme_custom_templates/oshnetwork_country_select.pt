<metal:macro define-macro="portlet">
<dl class="portlet portletClickSearch"
    i18n:domain="slc.clicksearch"
    tal:define="plone_view context/@@plone;">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span>Focal Points</span>
        <span class="portletTopRight"></span>
    </dt>
    <dd class="portletItem odd">
        <ul>
            <li class="current_selection">
                <strong>
                    Select a country:
                </strong>
            </li>
            <li>
            <select>
            <option tal:attributes="onclick python:'window.location = \'%s\'' % (here.get_oshnetwork_url());"> </option>
            <option 
                tal:define="cs here/get_fop_countries;
                            dummy python:cs.sort()"
                tal:repeat="item cs"
                tal:attributes="
                    value python:item[0];
                    onclick python:'window.location = \'%s/%s\'' % (here.get_oshnetwork_url(), item[0].lower().replace(' ','-'));
                    selected python:item[1] in request.get('URL0').split('/') and 'selected' or None;"
                tal:content="python:item[0]" />
            </select>
            </li>
        </ul>
    </dd>
</dl>
</metal:macro>
