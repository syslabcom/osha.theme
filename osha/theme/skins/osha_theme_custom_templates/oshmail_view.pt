<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      i18n:domain="osha"
      metal:use-macro="here/oshmail_template/macros/master">
      

<body>
<div metal:fill-slot="main" i18n:domain="osha">
    
    <metal:block define-macro="main">
    <tal:block define="text here/@@renderer ;
            itemtype python:here.getTypeInfo().Title();
            len_text python:len(text);
            defimage here/getImage|string:;
            ">

    <h1 tal:content="here/title_or_id" />

    
    <div class="floatSurrounding">
        <div class="floatingLeft" tal:condition="nocall:defimage">
            <tal:block define="imgtitle defimage/Title">
            <img alt="" src="folder.gif"
                 tal:attributes="src python:defimage.absolute_url();
                 width defimage/width|string:auto;
                 height defimage/height|string:auto;
                 alt imgtitle;" />
            </tal:block>
        </div>
        
        <p class="intro" 
           tal:condition="here/Description|nothing"
           tal:content="structure here/Description|nothing">description
        </p>
        
        <div id="bodyContent"
             class="stx"
             tal:condition="len_text"
             >
            <div tal:replace="structure text" />
        </div>
        <br style="clear: both;" />
    </div>
    <br style="clear: both;" />
    </tal:block>
    </metal:block>

</div>



</body>
</html>
