/*
  This file is based on the ploneCustom.css.dtml file shipped with Plone.

  <dtml-with base_properties> (do not remove this)
  <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either)
*/

.visualClearRight {
    clear: right;
}
#portal-header {
    border-bottom:1px solid &dtml-contentViewBorderColor;;
    background:&dtml-contentViewBackgroundColor; url('&dtml-portal_url;/topbanner2.jpg') 100% 50% no-repeat;
    float:left;
    height:92px;
    width:100%;
    margin-top:-1px; /* compensate 1px height hidden DIV with Skip-to-... links */
    position:relative;
}
#portal-logo {
    float:left;
}
dl.portlet #portal-logo,
dl.portlet #portal-header,
dl.portlet #portal-personaltools {
    float:none;
    height:auto;
}
#osha-topactions {
    background: &dtml-globalBackgroundColor;;
    margin:0 104px 0 201px;
    padding:0.6em 0em;
}
dl.portlet #osha-topactions {
    margin-left: 0;
}
#siteactions-wrapper h2 {
    color: &dtml-linkColor;;
    font-size:1em;
    margin:0;
    padding: 0 1em;
}
#osha-topdropdowns {
    margin:10px 104px 0 201px;
    position:relative;
}
#portal-network {
    padding:0 1em;
}
.dropdown {
    background: transparent url('&dtml-portal_url;/select.gif') 0% 50% no-repeat;
    padding-left: 1.5em;
    float: left;
    margin-right: 1em;
}
.dropdown select {
    font-size: 94%;
}
#portal-footer-languageselector {
    border-top: 1px solid &dtml-globalBackgroundColor;;
    text-align: center;
    color: #808080;
    padding-top:5px;
    margin-top:3px;
    font-size: &dtml-fontSmallSize;;
}
#portal-footer-languageselector li {
    display: inline;
}
#portal-footer-languageselector li a {
    color: #808080;
    text-decoration: none;
}
#portal-footer-languageselector .breadcrumbSeparator {
    font-size: 100%;
}
#footeractions-wrapper {
    text-align: center;
    font-size: &dtml-fontSmallSize;;    
    margin-top:1em;
}
ul#portal-footeractions {
    margin: 0;
    padding: 0;
}
ul#portal-footeractions li {
    display: inline;
}
ul#portal-footeractions li a {
    text-decoration: none;
}
ul#portal-footeractions .breadcrumbSeparator {
    color: #808080;
}
h2.headline {
    margin-top: 0;
    background:&dtml-globalBackgroundColor;;
    padding:0.3em 0.5em !important;
    margin-bottom: 1em;
}
.contentViews {
    margin-top: 1px;
}
.documentEditable .documentContent {
    padding-top: 1em !important;
}

/*
** PORTLETS STYLES 
*/

.portlet {
    margin-top: 0;
    background: #fff;
}
.portlet,
.portletHeader,
.portletItem,
.portletFooter {
    border-color: &dtml-globalBackgroundColor;;
}
.portletHeader {
    line-height:2em;
    font-weight: bold;
    margin-bottom:-1px;
}
.portletItem {
    padding: 0.5em;
    border-top:1px dashed &dtml-globalBackgroundColor;;
}
.portletFooter {
    padding: 0.25em 0.5em;
    border-style:solid solid none;
}
.portletItemDetails {
    text-align:left;
}

/* special portlets' styles */
dl.portletAlertService {
    background-color: #90C27E;
}
dl.portletAlertService dt.portletHeader {
    background-color: #09AB11;
}

dl.portletFreeNewsletter {
    background-color: #F2E39E;
}
dl.portletFreeNewsletter dt.portletHeader {
    background-color: #FFD201;
}
dl.portletEW2007 {
    background-color: #C8CBCC;
}
dl.portletEW2007 dt.portletHeader {
    background-color: #858C90;
}    
dl.portletCampaigns {
    background-color: #C8CBCC;
}
dl.portletCampaigns dt.portletHeader {
    background-color: #C8CBCC;
}
dl.portletCampaigns dd.portletFooter {
    background-color: #fff;
}
.portletCampaigns .portletItem {
    padding: 0 0 0.5em;
}
h4.campaignHeader {
    font-size: 1em;
    background: #858C90;
    line-height: 2em;
    padding: 0 1em;
    margin-top: 0;
    clear: right;
}
.campaignContent {
    padding: 0 0.5em;
}

dl.portletAlertService dd.portletFooter,
dl.portletFreeNewsletter dd.portletFooter,
dl.portletCampaigns dd.portletFooter {
    text-align: left;
    clear: right;
}
dl.portletAlertService .image-right,
dl.portletFreeNewsletter .image-right,
dl.portletCampaigns .image-right {
    border: none;
    margin: 0 0 0.5em 0;
}
#belowcontent-portlets {
    margin: 1em 0 1em 1em;
}

#belowcontent-portlets dl.portlet {
    float: left;
    width: 48%;
    margin: 0 1% 0 1%;
}




