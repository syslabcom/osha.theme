<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="osha">

  <metal:css fill-slot='css_slot'>
    <link rel="stylesheet" href="lipstick.css" type="text/css"
          media="screen" title="no title" charset="utf-8" />
  </metal:css>

  <body>
    <div metal:fill-slot="main">

      <div id="content" class="wide">
        <h1 tal:content="context/Title"></h1>

        <div class="introduction">
          <p tal:content="context/Description" />
        </div>

        <tal:films define="films view/films">
          <div class="film"
               tal:repeat="film_id films">
            <tal:film define="film python:films[film_id]">

              <h2 tal:content="film/title" i18n:translate=""></h2>
              <p tal:content="film/description" i18n:translate=""></p>
              <img class="video-thumbnail"
                   tal:attributes="src film/image" />
              <a tal:attributes="href string:${context/absolute_url}/multimedia-film-episodes-listing-view?film=${film_id}">View episodes</a>

            </tal:film>
          </div>
        </tal:films>

      </div>

    </div>
  </body>
</html>
