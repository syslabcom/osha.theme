<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
        lang="en"
        metal:use-macro="here/main_template/macros/master"
        i18n:domain="osha">

<body>

	<div metal:fill-slot="main" id="Homepage"
		tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime;">

		<div id="intro" tal:define="intro view/intro">
			<p id="agency_fullname" i18n:translate="box_agency_fullname">European Agency for Safety and Health at Work</p>
			<h1 tal:content="intro/title">Making Europe a safer place</h1>
			<a href="" tal:attributes="href intro/link" i18n:translate="portlet_more_link">More&hellip;</a>
		</div>

		<div class="carouselContainer" id="highlights-container">
			<h2 i18n:translate="label_highlights">Highlights</h2>
			<ul class="carousel highlights" id="highlights"
				tal:define="items view/highlights">
				<tal:rep repeat="news items">
		            <li tal:define="no repeat/news/number" 
						tal:attributes="id string:highlight-$no">
		              <tal:news_item>
		                  <a tal:attributes="href news/link">
							<img tal:attributes="src news/img_url" width="85" tal:on-error="string:no image" />
						  </a>
		                  <h3 tal:content="news/title">EU-OSHA targets health risks in cleaning industry for European Week 2009</h3>
						  <p class="teaserdate" tal:content="python:toLocalizedTime(news['date'])"/>
		                  <span tal:replace="structure news/description"></span>

		              </tal:news_item>
		            </li>
				</tal:rep>
			</ul>
		</div>

		<div id="in-focus-container">
			<h2 i18n:translate="label_in-focus">In Focus</h2>
			<ul class="in-focus" id="in-focus"
				tal:define="items view/in_focus">
				<tal:rep repeat="news items">
		            <li tal:define="no repeat/news/number" 
						tal:attributes="id string:highlight-$no">
		              <tal:news_item>
		                  <a tal:attributes="href news/link">
							<img tal:attributes="src news/img_url" width="85" tal:on-error="string:no image" />
						  </a>
		                  <h3 tal:content="news/title">EU-OSHA targets health risks in cleaning industry for European Week 2009</h3>
						  <p class="teaserdate" tal:content="python:toLocalizedTime(news['date'])"/>
		                  <span tal:replace="structure news/description"></span>

		              </tal:news_item>
		            </li>
				</tal:rep>
			</ul>
		</div>
	</div>
</body>
</html>