<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="osha">

  <metal:javascriptslot fill-slot="javascript_head_slot">
    <script src="#"
            tal:attributes="src string:$portal_url/++resource++osha.theme.behaviour/oshmail_view.js?v=4"
            type="text/javascript" charset="utf-8">
    </script>
  </metal:javascriptslot>
  <metal:css fill-slot='css_slot'>
    <link rel="stylesheet" type="text/css" media="screen" title="no title" charset="utf-8"
          tal:attributes="href string:${portal_url}/lipstick.css" />
    <link rel="stylesheet" type="text/css" media="screen" title="no title" charset="utf-8"
          tal:attributes="href string:${portal_url}/collage.css"/>
    <link rel="stylesheet" type="text/css" media="screen" title="no title" charset="utf-8"
          tal:attributes="href string:$portal_url/++resource++osha.theme.resources/overlay/overlay.css?v=1"/>
    <style type="text/css">.older-newsletter {display:none;}</style>
  </metal:css>

  <body>
    <div metal:fill-slot="main"
         tal:define="templateId template/getId; currlang here/portal_languages/getPreferredLanguage">

      <div id="content">
        <div class="message warning"
             tal:condition="request/portal_status_message | nothing"
             tal:content="request/portal_status_message | nothing" />
        <div id="mainContent">
          <h1>OSHmail service</h1>

          <div class="introduction">
            <p i18n:translate="oshmail_intro_welcome">
              Welcome to <strong i18n:name="oshmail">OSHmail</strong>, the electronic newsletter issued by the European Agency for Safety and Health at Work.
            </p>
            <!-- that has already <strong><span i18n:name="number" tal:replace="view/get_num_subscribers">44169</span> subscribers</strong> -->
          </div>

          <form action="#" tal:attributes="action string:./${view/getName}/subscribe" method="post" id="subscribe">
            <fieldset class="concise">
              <legend i18n:translate="oshmail_header_subscribe">Subscribe to OSHmail</legend> 
              <label>
                <span i18n:translate="label_name" tal:omit-tag="">Name</span> 
                <input type="text" name="name" class="span-6" />
              </label> 
              <label>
                <span i18n:translate="portlet_oshmail_email" tal:omit-tag="">E-mail address</span>* 
                <input type="text" name="emailaddress" class="span-6" />
              </label>
            </fieldset>

            <fieldset class="buttonBar">
              <button type="submit" name="subscribe" i18n:translate="Subscribe" onclick="pageTracker._trackPageview('/Events/oshmail/sub/en')">Subscribe</button>
              <button type="submit" name="unsubscribe" i18n:translate="Unsubscribe" onclick="pageTracker._trackPageview('/Events/oshmail/unsub/en')">Unsubscribe</button>
            </fieldset>
          </form>

          <hr class="clear" />
          <!--p i18n:translate="oshmail_intro_subsribe_now">
              Subscribe now for free and get:
              </p-->
          <p i18n:translate="oshmail_intro_every_month">
            Every month, <strong i18n:name="oshmail">OSHmail</strong> informs you of the latest developments in occupational safety and health:
          </p>
          <ul>
            <li i18n:translate="oshmail_list_1">the latest safety and health news from around the world;
            </li>
            <!--li i18n:translate="oshmail_list_2">e-mails that are <strong>custom tailored</strong> to your interest;
                </li-->
            <li i18n:translate="oshmail_list_3">updates on campaigns and activities organised by the Agency;
            </li>
            <li i18n:translate="oshmail_list_4">forthcoming events;
            </li>
            <li i18n:translate="oshmail_list_5">the latest Agency publications;
            </li>
            <li i18n:translate="oshmail_list_6">updates on EU legislation;
            </li>
            <li i18n:translate="oshmail_list_7">in 22 languagesâ€¦
            </li>
          </ul>
        </div>

        <div id="portlets">
          <div class="portlet" id="portletLatestIssue" tal:define="latest view/getLatestIssue">
            <h2 i18n:translate="label_latest_issue">Latest issue</h2>
            <img src="https://osha.europa.eu/en/teaser/mainstreaming-osh-into-business-management/image_mini"
                 alt="Latest OSHMail Issue"
                 tal:attributes="src view/get_image"
                 tal:condition="view/get_image" />
            <h4>
              <a rel="oshmail-overlay"
                 tal:attributes="href string:${latest/getURL}?set_language=$currlang"
                 tal:content="latest/Title" >title</a>

            </h4>
            <ul class="links">
              <li tal:repeat="latest_teaser view/latest_teasers">
                <a rel="oshmail-overlay"
                   tal:attributes="href string:${latest/getURL}?set_language=$currlang"
                   tal:content="latest_teaser">Title of teaser</a>
              </li>
            </ul>
          </div>

          <div class="portlet" id="portletOlderIssues">

            <h2 i18n:translate="label_previous_issues" i18n:domain="osha">Previous issues</h2>
            <h3 tal:content="view/thisyear">2010</h3>
            <ul class="links" tal:define="issues view/thisyears_issues">
              <li tal:repeat="issue issues">
                <a rel="oshmail-overlay"
                   tal:define="data python:issue[1]"
                   tal:attributes="href string:${data/url}?set_language=$currlang"
                   tal:content="data/title">OSHmail 91 - 2009</a>
              </li>
            </ul>

            <h3 tal:content="view/lastyear">2009</h3>
            <ul class="links" tal:define="issues view/lastyears_issues">
              <li tal:repeat="issue issues">
                <a rel="oshmail-overlay"
                   tal:define="data python:issue[1]"
                   tal:attributes="href string:${data/url}?set_language=$currlang"
                   tal:content="data/title">OSHmail 91 - 2009</a>
              </li>
            </ul>

            <p class="fadercontrol" i18n:translate="label_load_older">
              Load <a onclick="displaynl()" href="javascript:return false;" i18n:name="link"><span i18n:translate="label_older_newsletters">older newsletters</span></a>.
            </p>

            <tal:repeat define="oldernl view/oldernewsletters" repeat="nl oldernl/keys">
              <h3 tal:content="nl" class="older-newsletter">2009</h3>
              <ul class="links older-newsletter" tal:define="issues python:oldernl[nl]">
                <li tal:repeat="issue issues">
                  <a rel="oshmail-overlay"
                     tal:define="data python:issue[1]"
                     tal:attributes="href string:${data/url}?set_language=$currlang"
                     tal:content="data/title">OSHmail 91 - 2009</a>
                </li>
              </ul>
            </tal:repeat>
          </div>
        </div>
      </div>

      <div id="oshmail-overlay" class="osha-overlay full">
        <img id="overlay-spinner" src="spinner.gif" />
        <a class="osha-overlay-close" title="Close video"></a>
      </div>

      <div tal:replace="structure provider:plone.belowcontentbody" />
    </div>

  </body>
</html>
