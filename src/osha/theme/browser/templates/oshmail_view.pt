        <div class="portlet" id="portletLatestIssue" tal:define="latest view/getLatestIssue">
          <h2 i18n:translate="label_latest_issue" i18n:domain="osha">
            Latest issue
          </h2>
          <img src="http://osha.europa.eu/en/teaser/mainstreaming-osh-into-business-management/image_mini" 
               tal:attributes="src view/get_image" alt="Latest OSHMail Issue"
               tal:condition="view/get_image" />
          <h4>
            <span tal:define="date latest/effective" 
                  tal:replace="string:${date/Month} ${date/year}">October 2010</span>
          </h4>
          <ul class="links">
            <li tal:repeat="latest_teaser view/latest_teasers">
              <a href="#" tal:attributes="href latest/getURL" tal:content="latest_teaser">Title of teaser</a>
            </li>
          </ul>
        </div>
        <div class="portlet" id="portletOlderIssues">
          <h2 i18n:translate="label_previous_issues" i18n:domain="osha">
            Previous issues
          </h2>
          <h3 tal:content="view/thisyear">
            2010
          </h3>
          <ul class="links" tal:define="issues view/thisyears_issues">
            <li tal:repeat="issue issues">
              <a tal:define="data python:issue[1]" 
                 href="#" tal:attributes="href data/url" tal:content="data/title">OSHmail 91 - 2009</a>
            </li>
          </ul>
          <h3 tal:content="view/lastyear">
            2009
          </h3>
          <ul class="links" tal:define="issues view/lastyears_issues">
            <li tal:repeat="issue issues">
              <a tal:define="data python:issue[1]" 
                 href="#" tal:attributes="href data/url" tal:content="data/title">OSHmail 91 - 2009</a>
            </li>
          </ul>
          <p class="fadercontrol">
            Load <a onclick="displaynl()" href="javascript:return false;">older newsletters</a>.
          </p>
          <tal:repeat define="oldernl view/oldernewsletters" repeat="nl oldernl/keys">
          <h3 tal:content="nl" class="older-newsletter">
            2009
          </h3>
          <ul class="links older-newsletter" tal:define="issues python:oldernl[nl]">
            <li tal:repeat="issue issues">
              <a tal:define="data python:issue[1]" 
                 href="#" tal:attributes="href data/url" tal:content="data/title">OSHmail 91 - 2009</a>
            </li>
          </ul>
          </tal:repeat>
        </div>
      </div>
    </div>

    <div tal:replace="structure provider:plone.belowcontentbody" />

</div>

</body>
</html>
