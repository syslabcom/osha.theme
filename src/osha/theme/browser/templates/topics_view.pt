<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en-US"
      lang="en-US"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="osha">

  <metal:block tal:define="dummy python:request.RESPONSE.setHeader('Cache-control', 'max-age=0,s-maxage=3600')" />

  <body>
    <div metal:fill-slot="main">

      <h1 class="documentFirstHeading"
          i18n:translate="heading_topics">Topics</h1>

      <div id="topic-view-heading-box">

        <div id="relatedMedia" 
             tal:condition="view/hasRelatedMedia">
          <tal:related_media replace="structure python:view.getRelatedMedia('200', 'mini')" />
        </div>

        <h1 tal:content="context/Title">Title</h1>
        <p tal:content="context/Description">Description</p>

        <div class="visualClear"></div>

      </div>


      <table id="folder-listing" 
             tal:condition="view/left_folders">
        <tr>

          <td>
            <ul>
              <li tal:repeat="folder view/left_folders">
                <a href=""
                   tal:attributes="href string:${folder/getURL}"
                   tal:content="folder/Title" />
              </li>
            </ul>
          </td>

          <td>
            <ul>
              <li tal:repeat="folder view/right_folders">
                <a href=""
                   tal:attributes="href string:${folder/getURL}"
                   tal:content="folder/Title" />
              </li>
            </ul>
          </td>

        </tr>
      </table>

      <div class="visualClear"></div>

    </div>
  </body>
</html>
