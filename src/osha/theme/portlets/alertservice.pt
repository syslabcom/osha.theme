<dl class="portlet portletAlertService"
	tal:define="preflang view/preflang"
    i18n:domain="osha">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              i18n:translate="Alert Service">
            Alert Service
        </span>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        <span class="image-right">
            <img src="http://osha.europa.eu/portlet_alertservice_icon.gif" alt="Alert Service logo" title="Alert Service logo" />
        </span>
        <a rel="nofollow" href="http://osha.europa.eu/en/alertservice?sourceid=alertbanner"
			tal:attributes="href string:http://osha.europa.eu/${view/preflang}/alertservice?sourceid=alertbanner&utm_source=home&utm_medium=banner&utm_campaign=alertservice">
        <span tal:omit-tag="" i18n:translate="portlet_alertservice_text">Updates on topics of your choice</span>
        </a>
    </dd>

    <dd class="portletFooter">
        <strong id="numalertsubscribers" tal:content="view/num_subscribers">1340</strong> 
        <span i18n:translate="box_oshmail_subscribers"
              tal:omit-tag="">subscribers</span>
    </dd>

</dl>
