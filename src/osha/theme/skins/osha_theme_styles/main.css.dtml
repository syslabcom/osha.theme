}
ul#portal-footeractions .breadcrumbSeparator 
ul#portal-footeractions2 .breadcrumbSeparator{
    color: #808080;
}
h2.headline {
    margin-top: 0;
    background:&dtml-globalBackgroundColor;;
    padding:0.3em 0.5em !important;
    margin-bottom: 1em;
}
.contentViews {
    margin-top: 1px;
}
.documentEditable .documentContent {
    padding-top: 1em !important;
}

/*
** PORTLETS STYLES
*/

.portlet {
    margin-top: 0;
    background: #fff;
}
.portlet,
.portletHeader,
.portletItem,
.portletFooter {
    border-color: &dtml-globalBackgroundColor;;
}
.portletHeader {
    line-height:2em;
    font-weight: bold;
    margin-bottom:-1px;
}
.portletItem {
    padding: 0.5em;
    border-top:1px dashed &dtml-globalBackgroundColor;;
}
.portletFooter {
    padding: 0.25em 0.5em;
    border-style:solid solid none;
}
.portletItemDetails {
    text-align:left;
}

#abovecontent-portlets dl.portlet {
    background: transparent none repeat scroll 0% 0%;
}
#belowcontent-portlets dl.portlet {
    background: transparent none repeat scroll 0% 0%;
}
