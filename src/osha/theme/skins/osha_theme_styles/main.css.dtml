}
.portletCampaigns .portletItem {
    padding: 0 0 0.5em;
}
.portletNews .portletItem {
    font-size: 90%;
}
.portletEvents .portletItem {
    font-size: 90%;
}
.portletCollection .portletItem {
    font-size: 90%;
}
h4.campaignHeader {
    font-size: 1em;
    background: #858C90;
    line-height: 2em;
    padding: 0 1em;
    margin-top: 0;
    clear: right;
}
.campaignContent {
    padding: 0 0.5em;
}

dl.portletAlertService dd.portletFooter,
dl.portletFreeNewsletter dd.portletFooter,
dl.portletCampaigns dd.portletFooter {
    text-align: left;
    clear: right;
}
dl.portletAlertService .image-right,
dl.portletFreeNewsletter .image-right,
dl.portletCampaigns .image-right {
    border: none;
    margin: 0 0 0.5em 0;
}

dl.portletMoreAbout .portletItem ul {
    list-style-image: url(bullet.gif);
    list-style-type:square;
    padding-left: 15px;
    line-height: 1.2em;
}
dl.portletMoreAbout .portletItem {
    background-color: &dtml-contentViewBackgroundColor;
}

dl.portletImage {
    padding: 0;
    border: 0;
    margin:0.5em 0;
    background-color:transparent;
}
dl.portletImage .portletItem {
    margin: 0;
    padding:0;
    padding-bottom: 5px;
    border: 0px;
    text-align:center;
    background-color:transparent;
}

dl.portletInlineNavigationTree li {
    width: 49.999%;
    float:left;
}
dl.portletInlineNavigationTree dd.portletItem {
    border: 0px;
    padding: 0;
}
#belowcontent-portlets dl.portlet.portletInlineNavigationTree {
    border-top:1px solid #AAB1C5;
    background-color: #e6e8ed;
}
#belowcontent-portlets dl.portlet.portletInlineNavigationTree {
    width: 99%;
}
dl.portletInlineNavigationTree img {
    display: none;
}
dl.portletInlineNavigationTree ul {
    margin-top: 0;
    margin-left: 0;
}



#belowcontent-portlets {
    margin: 1em 0 ;
}

#belowcontent-portlets dl.portlet {
    float: left;
    width: 48%;
    margin: 0 2% 1% 0%;
}

/* Styles for SEP markup images */
.figure-box {
    float: left;
    margin-right: 1em;
}
.figure img {
    display: block;
    background-color: #fff;
    margin: 0px 0px 0px 0px;
    border: 0px solid #a9a9a9;
    padding: 4px;
}

/* The SEP search database box used in sep_view */
.searchDatabaseBox {
    padding: 1em;
    margin-right:2%;
    font-weight: bold;
    border: 1px solid #E6E8ED;
    background-color: #F7F8F9;
}

/* additional workflow state colors */
.state-checked {
    color: #8D9211 !important;
}
.state-to_amend {
    color: #780000 !important;
}


/* styles for filter + result type views */
.filter_column1 { float: left; width: 48%; padding-right: 10px; }
.filter_column2 { float: right; width: 48%; padding-left: 10px; border-left: 1px dotted gray; }

.field_vocab { margin-top:5px; }
.filter_column1 select,
  .filter_column2 li  { width: 80%; }
.filter_column1 .field_default, .filter_column2 .field_default,
.filter_column2 .field_vocab { width: 100%; padding: 2px 0; }
.filter_column2 .field_vocab input { width: 50%; }
.filter_column2 .field_vocab .searchButton { width: 15%; }
.filter_column2 input[type="checkbox"] { text-align: left; width: 5%;}
.filter_column1 .field_default input,
.filter_column2 .field_default input,
.filter_column2 .field_default select { width: 80%; }


#wf_results { width: 100%; margin-top: 2em; }
#wf_results th { background-color: #C5CBD8; border-bottom: 1px dotted gray; padding: 3px; }
#wf_results td { background-color: transparent; border-bottom: 1px dotted gray; padding: 3px; }
.filter_column1 .fieldRequired, .filter_column2 .fieldRequired   {visibility: hidden}

.filter_column1 input.input_checkbox, #multilingual_thesaurus li label input,
    #nace li label input { width: 1.2em; border: none; background: transparent; padding: 0; }

#filter_searchfields { height: 1%; background-color: #F3F6FF; border: 1px solid gray !important; padding:5px 10px; clear: both; overflow: hidden; }

#db_results dd { background-color: transparent; margin-left: 0; padding-left: 2em !important; border-bottom: 1px dotted gray; padding: 2px; }

/* styles for the teaser frontpage */
#teaserlisting {
    border: none;
    border-top: 0;
    margin-top:0;
    padding-top:0;
}
#teaserlisting td {
    border-right: none;
    padding-top:0;
    padding-bottom:0.75em;
}
#teaserlisting h2.headline {
    background:#C5CBD8 none repeat scroll 0%;
    border: none;
    color:#191919 !important;
    display:block;
    font-size:100%;
    font-weight:bold;
    line-height:normal;
    margin:0pt 0pt 1em;
    padding:0.5em 1em !important;
    position:static;
    z-index:1;
}
#teaserlisting .teaserdate {
    float:right;
    padding-top: 0.05em;
    font-size: 0.9em;
    font-weight:normal;
}

/* Linklists */
ul.linkList {
    line-height:normal;
    list-style-image:none;
    list-style-position:outside;
    list-style-type:none;
    margin:0.5em 0pt 0pt;
    padding:0pt;
}
ul.linkList li {
    background-color:transparent;
    background-image:url(&dtml-portal_url;/link.gif);
    background-position:0em 0.5em;
    background-repeat:no-repeat;
    display:block;
    line-height:normal;
    list-style-image:none;
    list-style-position:outside;
    list-style-type:none;
    margin:0pt 0pt 0pt 0em;
    padding:0.2em 0pt 0.2em 16px;
    width:auto;
}


